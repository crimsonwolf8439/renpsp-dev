label begin:
    scene black
    $renpy.pause(0.5)
    play sound "clock.wav"
    $renpy.pause(1)
    play music "Music/White Snow.ogg"
    $renpy.pause(3)
    mom "Ryo, you need to get up you are going to be late for school."
